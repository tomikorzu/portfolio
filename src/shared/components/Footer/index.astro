---
import data from "../../data/welcomeData.json";
---

<footer class="py-10 px-10 mt-10 lg:mt-16 w-full bg-[#0f192b]">
  <div
    class="mx-auto max-w-xl lg:max-w-[900px] flex flex-col sm:flex-row gap-3 justify-between"
  >
    <p>&copy; 2025 - All rights reserved</p>
    <ul class="flex gap-2">
      {
        data.socials.links.map((link) => {
          return (
            <li>
              <a
                href={link.url}
                target="_blank"
                class="lg:hover:brightness-125 transition duration-[.4s] text-xl"
              >
                <i class={link.icon} />
              </a>
            </li>
          );
        })
      }
    </ul>
  </div>
</footer>
