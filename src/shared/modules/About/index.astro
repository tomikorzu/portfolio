---
import Section from "../../components/Section/index.astro";
import Title from "../../components/Title/index.astro";
import Paragraph from "./Paragraph.astro";
import data from "../../data/aboutData.json";
---

<Section title="about">
  <Title>
    <i class="fa-solid fa-user"></i>About Me
  </Title>
  <div class="flex flex-col lg:flex-row gap-5">
    <article class="mt-1">
      {data.parragraphs.map((p) => <Paragraph>{p}</Paragraph>)}
    </article>
    <div
      class="w-full mt-2 p-2 rounded-2xl bg-[#2c2f36] border border-[#555557]"
    >
      <img
        src={data.image}
        alt="My Photo"
        class="object-cover rounded-2xl w-full h-full"
      />
    </div>
  </div>
</Section>
