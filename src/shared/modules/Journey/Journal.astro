---
import Tecnology from "../Projects/Tecnology.astro";

const { data } = Astro.props;
---

<li
  class="flex flex-col lg:flex-row px-5 pt-1 pb-12 border-l-4 border-gray-500 relative"
>
  <div class="size-4 rounded-full bg-[#29b3c5] absolute top-3 left-[-10px]">
  </div>
  <header class="w-full lg:w-1/3">
    <h3 class="font-bold text-[#29b3c5] text-xl mb-1">{data.title}</h3>
    <div class="flex items-center gap-2 mb-1">
      {
        data.image && (
          <img
            src={data.image}
            alt={`${data.company} Logo`}
            class="size-6 rounded-full object-cover"
          />
        )
      }
      <h4 class="font-semibold text-md text-[#e2e2e2]">{data.company}</h4>
    </div>
    <span class="font-bold text-sm text-[#1b9cad]">{data.date}</span>
  </header>
  <main class="w-full lg:w-2/3 flex flex-col gap-3">
    <p class="text-[#cdced1] font-semibold text-sm lg:text-base">
      {data.description}
    </p>
    <ul class="flex flex-wrap gap-2">
      {
        data.technologies.map((tech: { name: string; image: string }) => {
          return <Tecnology data={{ logo: tech.image, name: tech.name }} />;
        })
      }
    </ul>
  </main>
</li>
