---
import Layout from "../layouts/Layout.astro";
import "../styles/welcome.scss";
import { welcomeData } from "../utils/welcomeData.ts";
---

<Layout title="Welcome 👋🏻">
  <div
    class="hero min-h-screen flex flex-col justify-center items-start m-auto w-fit"
  >
    <div class="flex gap-2.5 items-center">
      <img
        src={welcomeData.image}
        alt="My profile picture"
        class="w-20 object-cover rounded-full h-20 border-4 border-blue-800"
      />
      <a
        href={welcomeData.workPage
          ? "https://gm2dev.com"
          : "https://linkedin.com/in/tomaskorzusehec"}
        target="_blank"
        class="rounded-full p-2.5 bg-slate-950 max-w-fit max-h-fit text-sm border relative z-0"
      >
        <span
          class={`span-bg ${welcomeData.actualWork ? "working" : "not-working"}`}
        ></span>
        {welcomeData.actualWork ? "Working in GM2Dev" : "Avaible to Work"}</a
      >
    </div>
    <h1 class="font-extrabold text-3xl">{welcomeData.title}</h1>
    <h2>
      {welcomeData.subtitle}
    </h2>
  </div>
</Layout>

<style>
  body {
    background: radial-gradient(circle, #090921, rgb(5, 1, 51));
  }
  .hero {
    color: #f1f1f1;
  }
  .span-bg {
    top: 50%;
    left: 50%;
    width: 100%;
    height: 100%;
    z-index: -1;
    position: absolute;
    background: linear-gradient(90deg, #ff0080, #7928ca);
    animation: rotateBorder 2s linear infinite;
  }

  @keyframes rotateBorder {
    from {
      transform: rotate(0deg) translate(-50%, -50%);
    }
    to {
      transform: rotate(360deg) translate(-50%, -50%);
    }
  }
</style>
